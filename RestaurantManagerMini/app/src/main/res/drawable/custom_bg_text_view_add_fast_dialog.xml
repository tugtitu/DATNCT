<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:ignore="StateListReachable">

    <padding
        android:bottom="5dip"
        android:left="5dip"
        android:right="5dip"
        android:top="5dip" />

    <item android:state_checked="false">
        <shape android:shape="rectangle">

            <solid android:color="#aaede7e7"/>

            <stroke
                android:width="@dimen/dp3"
                android:color="#d8191b19" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_checked="true">
        <shape android:shape="rectangle">

            <solid android:color="#ffffff"/>

            <stroke
                android:width="@dimen/dp3"
                android:color="#d8191b19" />
        </shape>
    </item>

</selector>